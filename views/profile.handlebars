<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<!-- Loop over each object in the projects array -->
{{#each posts as |post| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <p>


      <a href="/post/{{post.id}}">{{post.title}}</a>
      
    </p>
    <p>Created by {{post.user.name}} on {{format_date post.date_created}}</p>

<button class="js-modal-trigger" data-target="modal-js-example">
  Add a comment here
</button>








<div id="modal-js-example" class="modal">
  <div class="modal-background"></div>
  <div class="modal-card">
    <header class="modal-card-head">
      <p class="modal-card-title">Add Comment Below...</p>
      <button class="delete" aria-label="close"></button>
    </header>
    <section class="modal-card-body">
      <textarea class="textarea" placeholder="e.g. Hello world"></textarea>
    </section>
    <footer class="modal-card-foot">
      <div class="buttons">
        <button class="button is-success">Save Comment</button>
        <button class="button">Cancel</button>
      </div>
    </footer>
  </div>
</div>








  </div>
</div>

{{/each}}


<script src="./js/profile.js"></script>

<script src="./js/modal.js"></script>