<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>

</div>

<!-- Display Comments -->
<div id="comments-container-{{post.id}}">
  {{#if post.comments.length}}
    {{#each post.comments as |comment|}}
      <div class="comment">
        <p>{{comment.message}}</p>
        <p>By {{comment.user.name}} on {{format_date comment.date_created}}</p>
      </div>
    {{/each}}
  {{else}}
    <p>No comments yet.</p>
  {{/if}}
</div>

